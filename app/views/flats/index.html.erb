<h1>All our flats(<%= @flats.count %>)</h1>

<div class="container">
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class="card" style="margin: 8px;">
          <div class="image" style="background-image: url(<%= image_url 'flat.jpg' %> )"">
          </div>
          <div class="card-body">
            <p><%= flat.name %></p>
            <p><%= flat.address %></p>
            <p><i class="fas fa-users"></i> <%= flat.number_of_guests %>  <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

